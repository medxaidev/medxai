{
  "description": "Open slicing with unmatched values → no errors (open allows extras)",
  "slicingRoot": {
    "path": "Patient.identifier",
    "id": "Patient.identifier",
    "min": 0, "max": "unbounded",
    "types": [{ "code": "Identifier" }],
    "constraints": [], "mustSupport": false, "isModifier": false, "isSummary": false,
    "slicing": {
      "discriminators": [{ "type": "value", "path": "system" }],
      "rules": "open",
      "ordered": false
    }
  },
  "slices": [
    {
      "path": "Patient.identifier",
      "id": "Patient.identifier:MRN",
      "min": 0, "max": 1,
      "types": [{ "code": "Identifier" }],
      "constraints": [], "mustSupport": false, "isModifier": false, "isSummary": false,
      "sliceName": "MRN",
      "fixed": { "system": "http://hospital.example.org/mrn" }
    }
  ],
  "scenarios": [
    {
      "label": "unmatched value in open slicing → valid",
      "values": [
        { "system": "http://hospital.example.org/mrn", "value": "12345" },
        { "system": "http://unknown.org", "value": "99999" }
      ],
      "expectedIssueCount": 0
    },
    {
      "label": "only unmatched values in open slicing → valid",
      "values": [
        { "system": "http://unknown.org", "value": "99999" },
        { "system": "http://other.org", "value": "11111" }
      ],
      "expectedIssueCount": 0
    },
    {
      "label": "empty values → valid (no min on slices)",
      "values": [],
      "expectedIssueCount": 0
    }
  ]
}
