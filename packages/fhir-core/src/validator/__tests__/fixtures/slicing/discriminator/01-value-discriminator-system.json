{
  "description": "Value discriminator on identifier.system — match by system value",
  "slicingRoot": {
    "path": "Patient.identifier",
    "id": "Patient.identifier",
    "min": 0, "max": "unbounded",
    "types": [{ "code": "Identifier" }],
    "constraints": [], "mustSupport": false, "isModifier": false, "isSummary": false,
    "slicing": {
      "discriminators": [{ "type": "value", "path": "system" }],
      "rules": "open",
      "ordered": false
    }
  },
  "slices": [
    {
      "path": "Patient.identifier",
      "id": "Patient.identifier:MRN",
      "min": 1, "max": 1,
      "types": [{ "code": "Identifier" }],
      "constraints": [], "mustSupport": false, "isModifier": false, "isSummary": false,
      "sliceName": "MRN",
      "fixed": { "system": "http://hospital.example.org/mrn" }
    },
    {
      "path": "Patient.identifier",
      "id": "Patient.identifier:SSN",
      "min": 0, "max": 1,
      "types": [{ "code": "Identifier" }],
      "constraints": [], "mustSupport": false, "isModifier": false, "isSummary": false,
      "sliceName": "SSN",
      "fixed": { "system": "http://hl7.org/fhir/sid/us-ssn" }
    }
  ],
  "scenarios": [
    {
      "label": "MRN value matches MRN slice → valid",
      "values": [
        { "system": "http://hospital.example.org/mrn", "value": "12345" }
      ],
      "expectedIssueCount": 0
    },
    {
      "label": "MRN + SSN both present → valid",
      "values": [
        { "system": "http://hospital.example.org/mrn", "value": "12345" },
        { "system": "http://hl7.org/fhir/sid/us-ssn", "value": "999-99-9999" }
      ],
      "expectedIssueCount": 0
    },
    {
      "label": "MRN missing (min=1) → CARDINALITY_MIN_VIOLATION",
      "values": [
        { "system": "http://hl7.org/fhir/sid/us-ssn", "value": "999-99-9999" }
      ],
      "expectedIssueCount": 1,
      "expectedIssueCodes": ["CARDINALITY_MIN_VIOLATION"]
    }
  ]
}
