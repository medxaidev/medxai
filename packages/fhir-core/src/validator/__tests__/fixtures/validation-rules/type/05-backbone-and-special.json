{
  "description": "Backbone elements (no type constraints), null values, and special type compatibility",
  "scenarios": [
    {
      "label": "backbone element with no types → always valid (no type check)",
      "element": {
        "path": "Patient.contact",
        "id": "Patient.contact",
        "min": 0, "max": "unbounded",
        "types": [],
        "constraints": [], "mustSupport": false, "isModifier": false, "isSummary": false
      },
      "value": { "name": { "family": "Smith" } },
      "expectedIssueCount": 0
    },
    {
      "label": "null value → skipped (handled by cardinality, not type)",
      "element": {
        "path": "Patient.gender",
        "id": "Patient.gender",
        "min": 0, "max": 1,
        "types": [{ "code": "code" }],
        "constraints": [], "mustSupport": false, "isModifier": false, "isSummary": false
      },
      "value": null,
      "expectedIssueCount": 0
    },
    {
      "label": "Identifier object matches Identifier type",
      "element": {
        "path": "Patient.identifier",
        "id": "Patient.identifier",
        "min": 0, "max": "unbounded",
        "types": [{ "code": "Identifier" }],
        "constraints": [], "mustSupport": false, "isModifier": false, "isSummary": false
      },
      "value": { "system": "urn:oid:1.2.3", "value": "MRN-001" },
      "expectedIssueCount": 0
    },
    {
      "label": "Address object matches Address type",
      "element": {
        "path": "Patient.address",
        "id": "Patient.address",
        "min": 0, "max": "unbounded",
        "types": [{ "code": "Address" }],
        "constraints": [], "mustSupport": false, "isModifier": false, "isSummary": false
      },
      "value": { "line": ["123 Main St"], "city": "Springfield", "state": "IL" },
      "expectedIssueCount": 0
    },
    {
      "label": "Extension object matches Extension type",
      "element": {
        "path": "Patient.extension",
        "id": "Patient.extension",
        "min": 0, "max": "unbounded",
        "types": [{ "code": "Extension" }],
        "constraints": [], "mustSupport": false, "isModifier": false, "isSummary": false
      },
      "value": { "url": "http://example.org/ext", "valueString": "hello" },
      "expectedIssueCount": 0
    }
  ]
}
