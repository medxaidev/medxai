{
  "description": "Pattern with primitive values — exact match required for primitives",
  "scenarios": [
    {
      "label": "string pattern matches → valid",
      "element": {
        "path": "Patient.gender",
        "id": "Patient.gender",
        "min": 0, "max": 1,
        "types": [{ "code": "code" }],
        "constraints": [], "mustSupport": false, "isModifier": false, "isSummary": false,
        "pattern": "male"
      },
      "value": "male",
      "expectedIssueCount": 0
    },
    {
      "label": "string pattern mismatch → PATTERN_VALUE_MISMATCH",
      "element": {
        "path": "Patient.gender",
        "id": "Patient.gender",
        "min": 0, "max": 1,
        "types": [{ "code": "code" }],
        "constraints": [], "mustSupport": false, "isModifier": false, "isSummary": false,
        "pattern": "male"
      },
      "value": "female",
      "expectedIssueCount": 1,
      "expectedIssues": [{ "code": "PATTERN_VALUE_MISMATCH" }]
    },
    {
      "label": "boolean pattern matches → valid",
      "element": {
        "path": "Patient.active",
        "id": "Patient.active",
        "min": 0, "max": 1,
        "types": [{ "code": "boolean" }],
        "constraints": [], "mustSupport": false, "isModifier": false, "isSummary": false,
        "pattern": true
      },
      "value": true,
      "expectedIssueCount": 0
    },
    {
      "label": "number pattern matches → valid",
      "element": {
        "path": "Quantity.value",
        "id": "Quantity.value",
        "min": 0, "max": 1,
        "types": [{ "code": "decimal" }],
        "constraints": [], "mustSupport": false, "isModifier": false, "isSummary": false,
        "pattern": 100
      },
      "value": 100,
      "expectedIssueCount": 0
    },
    {
      "label": "number pattern mismatch → PATTERN_VALUE_MISMATCH",
      "element": {
        "path": "Quantity.value",
        "id": "Quantity.value",
        "min": 0, "max": 1,
        "types": [{ "code": "decimal" }],
        "constraints": [], "mustSupport": false, "isModifier": false, "isSummary": false,
        "pattern": 100
      },
      "value": 200,
      "expectedIssueCount": 1,
      "expectedIssues": [{ "code": "PATTERN_VALUE_MISMATCH" }]
    }
  ]
}
