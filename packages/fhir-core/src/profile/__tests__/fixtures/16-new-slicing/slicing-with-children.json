{
  "description": "Case A: New slicing with child constraints on slices",
  "baseElements": [
    { "path": "Patient", "min": 0, "max": "*" },
    { "path": "Patient.identifier", "min": 0, "max": "*" },
    { "path": "Patient.identifier.system", "min": 0, "max": "1" },
    { "path": "Patient.identifier.value", "min": 0, "max": "1" },
    { "path": "Patient.name", "min": 0, "max": "*" }
  ],
  "diffElements": [
    { "path": "Patient.identifier", "slicing": { "discriminator": [{ "type": "value", "path": "system" }], "rules": "open" } },
    { "path": "Patient.identifier", "sliceName": "MRN", "min": 1 },
    { "path": "Patient.identifier.system", "min": 1, "fixedUri": "http://hospital.org/mrn" }
  ],
  "expected": {
    "hasSlicingRoot": true,
    "sliceCount": 1,
    "sliceNames": ["MRN"]
  }
}
